<% @posts.each do |post| %>
  <%= render partial: "post", locals: {post: post} %>
<% end %>


<!-- NOTE : Putting this code here so that it is only run once compared to the partial that will be run multiple times -->
<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-more").on('click', function() {
    // get the id from the data attribute
    var id = $(this).data("id");
    $.get("/posts/" + id + "/body", function(data) {
        // NOTE : Testing alert to confirm working functionality
        // alert(data);
    
        // NOTE : Replace text of body-id div
        $("#body-" + id).text(data);
    });
  });
});
</script>
