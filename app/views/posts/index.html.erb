<% @posts.each do |post| %>
  <%= render partial: "post", locals: {post: post} %>
<% end %>

<!-- 4.  This script connects the button created in the _post partial go be linked to an event listener.  This goes here instead of the partial to be only run one time instead of once for every post -->


<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-more").on('click', function() {
    let id = $(this).data("id");
    $.get("/posts/" + id + "/body", function(data) {
      // Replace text of body-id div
      $("#body-" + id).text(data);
    });
  });
});
</script>