<% @posts.each do |post| %>
  <%= render partial: "post", locals: {post: post} %>
<% end %>

<script type="text/javascript">
  $(function(){ //shorthand for document ready
    $(".js-more").on("click", function() { //onclick of the button
      var id = $(this).data("id"); //'this' is the object that initiated the click (the specific button with a specific data-id)
      $.get("/posts/" + id + "/body", function(data){ // make an AJAX get req to posts/:id/body
        $("#body-" + id).text(data)
      })
    }) // data here is what is passed back in as the response. AJAX does that for you
  })
</script>
