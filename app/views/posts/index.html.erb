<% @posts.each do |post| %>
  <%= render partial: "post", locals: {post: post} %>
<% end %>

<!-- jQuery for button click listener -->
<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-more").on('click', function() {
    // get the id from the data attribute
    let id = $(this).data("id");
    $.get("/posts/" + id + "/body", 
          data => {
            $(`#body-${id}`).text(data);
          });
  });
});
</script>