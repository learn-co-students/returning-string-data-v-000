<h1><%= post.id %>: <%= post.title %></h1>
<div id="body-<%= post.id %>"><%= truncate post.description %></div>

<!-- #3 Add button to partial so each post has a way to request the body of the post-->
<button class="js-more" data-id="<%= post.id %>">More...</button>

<!-- #5 replace truncated description with full description-->
<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-more").on('click', function() {
    let id = $(this).data("id");
    $.get("/posts/" + id + "/body", function(data) {
      // Replace text of body-id div
      $("#body-" + id).text(data);
    });
  });
});
</script>